<link rel="stylesheet" href="~/css/STIndexStyle.css" asp-append-version="true" />

@model IEnumerable<AlqudsProject.Models.Student>

<h2>قائمة الطالبات</h2>

<form method="get" asp-action="Index" class="filters-container">
    <div>
        <a class="add-btn" asp-action="Create">➕ إضافة طالبة جديدة</a>
    </div>
    <div>
        <input type="text" id="searchInput" class="form-control" placeholder="بحث ..." />
    </div>
</form>

<table>
    <thead>
        <tr>
            <th>اسم الطالبة</th>
            <th>اسم الحلقة</th>
            <th>المستوى التعليمي</th>
            <th>الموقع</th>
            <th>رقم الجوال</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.Name</td>
            <td>@student.Halaqa?.Name</td>
            <td>@student.CurrentEducationalLevel</td>
            <td>@student.Address</td>
            <td>@(string.IsNullOrEmpty(student.PhoneNumber) ? "لا يوجد" : student.PhoneNumber)</td>
            <td class="align-middle text-center">
                <div class="dropdown">
                    <button class="dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false"></button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/Student/Details/@student.StudentId">عرض تفاصيل الطالبة</a></li>
                        <li><a class="dropdown-item" href="/Student/Edit/@student.StudentId">تعديل معلومات الطالبة</a></li>
                        <li><a class="dropdown-item" href="/Student/Delete/@student.StudentId">حذف الطالبة</a></li>
                    </ul>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#searchInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            var hasResult = false;
            $("table tbody tr").each(function () {
                var match = $(this).text().toLowerCase().indexOf(value) > -1;
                $(this).toggle(match);
                if (match) hasResult = true;
            });

            if (!hasResult) {
                if ($("#noResults").length === 0) {
                    $("table tbody").append("<tr id='noResults'><td colspan='6'>لا توجد نتائج مطابقة</td></tr>");
                }
            } else {
                $("#noResults").remove();
            }
        });
    });
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
