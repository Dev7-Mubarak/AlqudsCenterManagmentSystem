<head>
    <link rel="stylesheet" href="~/css/STDetailsStyle.css" asp-append-version="true" />
</head>
@model AlqudsProject.Models.Manhaj

@{
    ViewData["Title"] = "تفاصيل المنهج";
}

<div class="details-container">
    <div class="title-desigen">
        <div class="profile-image-container">
            <!-- صورة ثابتة حسب الكود القديم -->
            <img src="~/images/ManahjPic.jpg" alt="صورة المنهج" class="profile-image">
        </div>
        <div>
            <h2 class="student-name">@Model.Name</h2>
        </div>
    </div>

    <div class="Section">
        <div class="section-1">
            <div class="student-info-group">
                <strong class="info-label">اسم المنهج:</strong>
                <span class="info-value">@Model.Name</span>
            </div>

            <div class="student-info-group">
                <strong class="info-label">رابط المنهج:</strong>
                <span class="info-value">@Model.Url</span>
            </div>

            <div class="student-info-group">
                <strong class="info-label">صورة المنهج:</strong>
                <span class="info-value">@Model.Picture</span>
            </div>
        </div>
    </div>

    <div class="form-buttons">
        <input type="button" value="رجوع" class="back-button" onclick="history.back()" />
    </div>
</div>
